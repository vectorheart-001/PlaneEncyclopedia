                <label asp-for="PlaneId" class="control-label"></label>
                <select asp-for="PlaneId" class ="form-control" asp-items="ViewBag.PlaneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MissileId" class="control-label"></label>
                <select asp-for="MissileId" class ="form-control" asp-items="ViewBag.MissileId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class ="btn btn-success" asp-action="Index">Back to armament</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
