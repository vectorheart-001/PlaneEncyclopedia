@model PlaneEncyclopedia.Models.Plane

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plane</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd>
            <img src = "@Url.Content(Model.ImagePath)" alt="Image" style = "width:300px;" />
        </dd>
        
        
    </dl>
    <h1>Description</h1>
       @Html.DisplayFor(model => model.Description)
    
    
</div>
<div>
    <a class = "btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class = "btn btn-success" asp-action="Index">Back to missiles</a>
</div>
